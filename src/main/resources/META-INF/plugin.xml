<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.nineswordsmonster.crispylamp</id>
    <name>Crispy Lamp</name>
    <vendor email="wangjia_1919@163.com">Nine Swords Monster</vendor>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService
                serviceImplementation="com.github.nineswordsmonster.crispylamp.services.MyApplicationService"/>
        <projectService serviceImplementation="com.github.nineswordsmonster.crispylamp.services.MyProjectService"/>
        <toolWindow id="demo" anchor="left"
                    factoryClass="com.github.nineswordsmonster.crispylamp.tool.DemoToolWindowFactory"/>
        <themeProvider id="nine.theme" path="/nine.theme.json"/>
    </extensions>

    <applicationListeners>
        <listener class="com.github.nineswordsmonster.crispylamp.listeners.MyProjectManagerListener"
                  topic="com.intellij.openapi.project.ProjectManagerListener"/>
    </applicationListeners>

    <actions>
        <group id="nine.actions" popup="true" text="Nine Action Group"
               class="com.github.nineswordsmonster.crispylamp.actions.NineActionGroup">
            <add-to-group group-id="HelpMenu" anchor="last"/>

            <action id="nine.ChickenSoupAction" text="Get Soup"
                    class="com.github.nineswordsmonster.crispylamp.actions.ChickenSoupAction">
                <keyboard-shortcut keymap="$default" first-keystroke="shift ctrl meta alt I"/>
            </action>

            <separator/>

            <action id="nine.ComposeDemoAction" text="Show Compose Demo..."
                    class="com.github.nineswordsmonster.crispylamp.actions.ComposeDemoAction">
            </action>
        </group>
    </actions>

    <application-components>
    </application-components>
</idea-plugin>
